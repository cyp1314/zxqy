{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "isolatedModules": false,
    "types": ["vite/client", "./node_modules/element-plus/global"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    // 针对element-puls的ts打包校验
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/plugins/designer/plugins/extension-moddle/activiti/activitiExtension.js",
    "src/components/Process/plugins/index.js",
    "src/components/Process/plugins/paletteProvider.js",
    "src/components/Process/plugins/flowableExtension.js",
    "src/components/Process/plugins/contentPadProvider.js",
  ],
  "exclude": ["src/components/CountTo/*.vue"]
}
